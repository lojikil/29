# Test: tag with single type
type Baz {
    BazOk int
    BazErr int
}

# Test: tags with multiple types
type Blah {
    BlahOk int int int
    BlahErr int string int
}

# Test: we can apply constructors to complex types
type Bloo {
    BlooOk array of int
    BlooErr int string
}

type Frob {
    FrobOk array of Bloo
    FrobErr array Bloo
    FrobWot Bloo int
    FrobWat int int string array of int
}

# Test: tags separated with semi-colons
type Foo {
    Left int;
    Right int
}

# Test: parameter list
type Result Success Fail {
    Ok Success;
    Err Fail
}
